
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "types": ["node", "schema"]
  },
  "include": ["src/**/*.ts", "src/types/schema/index.d.ts"],
  "exclude": ["node_modules"]
}
